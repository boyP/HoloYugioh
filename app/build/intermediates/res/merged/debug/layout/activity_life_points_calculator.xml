<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_life_points_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="android.com.holoyugioh.LifePointsCalculatorActivity">

    <include
        layout="@layout/lifepoint_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/header">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:inputType="number"
            android:id="@+id/output"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/buttonRow">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@color/your_LP"
                android:text="Plus"
                android:layout_margin="5dp"
                android:id="@+id/plus_p1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@color/your_LP"
                android:text="Minus"
                android:layout_margin="5dp"
                android:id="@+id/minus_p1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@color/opp_LP"
                android:text="Plus"
                android:layout_margin="5dp"
                android:id="@+id/plus_p2"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:background="@color/opp_LP"
                android:text="Minus"
                android:layout_margin="5dp"
                android:id="@+id/minus_p2"/>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="6"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:text="1"
                android:id="@+id/calculator_1" />
            <Button
                android:text="2"
                android:id="@+id/calculator_2"/>
            <Button
                android:text="3"
                android:id="@+id/calculator_3"/>
            <Button
                android:text="4"
                android:id="@+id/calculator_4"/>
            <Button
                android:text="5"
                android:id="@+id/calculator_5"/>
            <Button
                android:text="00"
                android:id="@+id/calculator_00"/>

            <Button
                android:text="6"
                android:id="@+id/calculator_6"/>
            <Button
                android:text="7"
                android:id="@+id/calculator_7"/>
            <Button
                android:text="8"
                android:id="@+id/calculator_8"/>
            <Button
                android:text="9"
                android:id="@+id/calculator_9"/>
            <Button
                android:text="0"
                android:id="@+id/calculator_0"/>
            <Button
                android:text="C"
                android:id="@+id/calculator_C"/>

        </GridLayout>

    </LinearLayout>

</RelativeLayout>
